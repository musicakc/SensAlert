<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="com.example.amitoj.sensalert.SensorActivity"
    android:background="@drawable/bg">

    <TextView
        android:layout_width="250dp"
        android:layout_height="75dp"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="SensAlert"
        android:typeface="normal"
        android:id="@+id/textView2"
        android:layout_alignParentCenter="true"
        android:autoText="true"
        android:textAlignment="center"
        android:textColorHighlight="@color/material_blue_grey_900"
        android:textColor="@color/switch_thumb_normal_material_dark"
        android:textSize="50dp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Check Light"
        android:id="@+id/button1"
        android:background="@drawable/shape"
        android:padding="10dp"
        android:textColor="#2F4F4F"
        android:layout_above="@+id/button2"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="58dp" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Check Temperature"
        android:id="@+id/button2"
        android:background="@drawable/shape"
        android:padding="10dp"
        android:textColor="#2F4F4F"
        android:layout_centerVertical="true"
        android:layout_centerHorizontal="true" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Check Pressure"
        android:id="@+id/button3"
        android:layout_marginTop="65dp"
        android:background="@drawable/shape"
        android:padding="10dp"
        android:textColor="#2F4F4F"
        android:layout_below="@+id/button2"
        android:layout_centerHorizontal="true" />
</RelativeLayout>
